{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    {% if not error is empty %}
        <script>
            $(document).ready(function () {
                M.toast({html: 'Mot de passe ou adresse mail incorrect !'})
            })
        </script>
    {% endif %}
    <div class="row container mt">
        <div class="col s12 z-depth-4 card-panel hoverable">
            {{ form_start(form) }}
            <div class="row margin">
                <div class="input-field col s12">
                    <i class="material-icons">person_pin</i>
                    {{ form_row(form.email) }}
                    {{ form_errors(form.email) }}
                    {#<label for="email" class="center-align">Email</label>#}
                </div>
            </div>
            <div class="row margin">
                <div class="input-field col s12">
                    <i class="material-icons">lock</i>
                    {{ form_row(form.password) }}
                    {{ form_errors(form.password) }}
                    {#<label for="login_user_password" class="center-align">Password</label>#}
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    {{ form_row(form.connect, {'attr': {'class': 'btn waves-effect waves-light col s12'}}) }}
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6 m6 l6">
                    <p class="margin medium-small"><a href="{{ path('register') }}">Register Now!</a></p>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}





