{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    {% if not error is empty %}
        <script>
            $(document).ready(function () {
                M.toast({html: 'Mot de passe ou adresse mail incorrect !'})
            })
        </script>
    {% endif %}
    {{ form_start(form) }}
    <div class="row mt-3 mb-3">
        <div class="col s4 offset-s4">
            <div class="card-panel hoverable">
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">account_circle</i>
                        {{ form_widget(form.email, { 'id': 'email', 'attr': {'class': 'validate'}}) }}
                        {{ form_errors(form.email, { 'id': 'email', 'attr': {'class': 'validate'}}) }}
                        <label for="email" class="center-align">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">lock</i>
                        {{ form_widget(form.password, {'id': 'password', 'attr': {'class': 'validate'}}) }}
                        {{ form_errors(form.password, {'id': 'password', 'attr': {'class': 'validate'}}) }}
                        <label for="password" class="center-align">Password</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        {{ form_row(form.connect, {'attr': {'class': 'btn black waves-effect waves-light col s12'}}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <a href="{{ path('register') }}">Inscription</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}