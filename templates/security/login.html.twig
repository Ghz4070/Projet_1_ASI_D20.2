{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    {% if not error is empty %}
        <script>
            $(document).ready(function(){
                M.toast({html: 'Mot de passe ou adresse mail incorrect !' })
            })
        </script>
    {% endif %}
    <div>
        {{ form_start(form) }}
        <div>
            {{ form_row(form.email)}}
            {{ form_errors(form.email) }}
        </div>
        <div>
            {{ form_row(form.password) }}
            {{ form_errors(form.password) }}
        </div>
        <div>
            {{ form_row(form.connect, {'attr': {'class': 'btn'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}





