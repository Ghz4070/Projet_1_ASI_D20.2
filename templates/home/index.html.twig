{% extends 'base.html.twig' %}

{% block title %}home{% endblock %}

{% block body %}
    {% for conferences in conference %}
        <div class="form-group mt-2">
            <h1>{{ conferences.name }}</h1>
        </div>
        <div class="form-group mt-2">
            <span>{{ conferences.createdAt.date }}</span>
        </div>
        <div class="form-group mt-2">
            <p>{{ conferences.description }}</p>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="form-group">
                <a class="mr-3" href="{{ path('edit_conference', {'id': conferences.id}) }}">Modifier</a>
                <a href="{{ path('remove_conference', {'id': conferences.id}) }}">Supprimer</a>
            </div>
        {% endif %}
    {% endfor %}
{% endblock %}
